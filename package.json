{
  "name": "tokene",
  "version": "1.4.0",
  "license": "MIT",
  "author": "Distributed Lab",
  "description": "The TokenE operating system on top of EVM by Distributed Lab",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/tokene/core/core-contracts"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart-contracts",
    "tokene",
    "distributedlab"
  ],
  "scripts": {
    "install": "npx husky install",
    "compile": "npx hardhat compile --force",
    "coverage": "npx hardhat coverage",
    "test": "npx hardhat test",
    "test-all": "npm run deploy-dev && npm run test",
    "private-network": "npx hardhat node",
    "private-network-fork": "npx hardhat node --fork https://mainnet.infura.io/v3/$(grep INFURA_KEY .env | cut -d '\"' -f2)",
    "deploy-dev": "npx hardhat deploy --network dev",
    "deploy-goerli": "npx hardhat deploy --network goerli --verify --confirmations 4",
    "deploy-chapel": "npx hardhat deploy --network chapel --verify --confirmations 1",
    "deploy-eth-mainnet": "npx hardhat deploy --network ethereum --verify --confirmations 4",
    "deploy-bsc-mainnet": "npx hardhat deploy --network bsc --verify --confirmations 2",
    "generate-types": "TYPECHAIN_FORCE=true npx hardhat typechain",
    "lint-fix": "npm run lint-sol-fix && npm run lint-js-fix && npm run lint-json-fix",
    "lint-json-fix": "prettier --write \"./[a-zA-Z0-9.]+(?!-lock).json\"",
    "lint-js-fix": "prettier --write \"./**/*.js\"",
    "lint-sol-fix": "prettier --write \"contracts/**/*.sol\"",
    "publish-to-npm": "npm run lint-fix && bash ./scripts/publish.sh"
  },
  "dependencies": {
    "@dlsl/dev-modules": "1.7.4",
    "@dlsl/hardhat-migrate": "^1.2.0",
    "@openzeppelin/contracts": "4.5.0",
    "@openzeppelin/contracts-upgradeable": "4.5.0",
    "dotenv": "^10.0.0",
    "hardhat": "^2.12.0",
    "node-vault": "^0.9.22",
    "typechain": "^8.1.0"
  },
  "devDependencies": {
    "@metamask/eth-sig-util": "^4.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/truffle-v5": "^8.0.1",
    "@typechain/web3-v1": "^6.0.1",
    "@typechain/hardhat": "^6.1.3",
    "bignumber.js": "^9.0.1",
    "chai": "^4.3.4",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^7.0.2",
    "mocha": "^9.1.1",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-rc.1",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "truffle-assertions": "^0.9.2",
    "web3": "^1.7.5"
  }
}
