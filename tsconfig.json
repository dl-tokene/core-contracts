{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"],
      "@ethers-v6": ["./generated-types"],
      "@test-helpers": ["./test/helpers"],
      "@scripts": ["./scripts"]
    }
  }
}
